<article>
    <h2>{{post.title}}</h2>
    <p>By {{post.user.username}} on {{post.createdAt}}</p>
    <p>{{post.content}}</p>
</article>
<section>
    <h3>Comments</h3>
    {{#each post.comments}}
        <div>
            <p>{{this.content}}</p>
            <p>By {{this.user.username}} on {{this.createdAt}}</p>
        </div>
    {{/each}}
</section>
